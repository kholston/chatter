<%= simple_form_for(@chat) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :chat, label: "Chat about it", autofocus: true, input_html: {class: "textarea"}, wrapper: false, label_html:{ class: "label"}, placeholder:  "Compose new chat..." %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>
